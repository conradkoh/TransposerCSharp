<Window x:Class="Transposer_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="700" Width="1000">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TabControl x:Name="TABCONTROL_MAIN" Grid.ColumnSpan="2" Margin="0,0,0,-0.2" SnapsToDevicePixels="True" ClipToBounds="True">
            <TabItem x:Name="TABCONTROL_MAIN_TAB_MAIN" Header="Main">
                <Grid x:Name="GRID_TABCONTROL" Background="#FFE5E5E5">
                    <TextBox x:Name="DISPLAY_MAIN" HorizontalAlignment="Left" Height="557" Margin="7,6,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="713" IsReadOnly="True" IsReadOnlyCaretVisible="True"/>
                    <Button x:Name="BUTTON_TRANSPOSE_UP" Content="Transpose Up" HorizontalAlignment="Left" Margin="768,16,0,0" VerticalAlignment="Top" Width="165" Height="119" Background="#FFCFC9C9" Click="BUTTON_TRANSPOSE_UP_Click"/>
                    <Button x:Name="BUTTON_TRANSPOSE_DOWN" Content="Transpose Down" HorizontalAlignment="Left" Margin="770,177,0,0" VerticalAlignment="Top" Width="165" Height="119"/>
                    <TextBox x:Name="DISPLAY_PLAYLIST" HorizontalAlignment="Left" Height="233" Margin="735,331,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="237"/>
                </Grid>
            </TabItem>
            <TabItem x:Name="TABCONTROL_MAIN_TAB_OPTIONS" Header="Options">
                <Grid Background="#FFE5E5E5">
                    <Button x:Name="OPTIONS_BUTTON_LOAD_SONGLIST" Content="Load Songlist" HorizontalAlignment="Left" Margin="33,46,0,0" VerticalAlignment="Top" Width="274" Height="192" Click="OPTIONS_BUTTON_LOAD_SONGLIST_Click"/>
                </Grid>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
